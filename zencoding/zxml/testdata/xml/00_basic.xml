<?xml version="1.0" encoding="UTF-8"?>
<!-- Comment: This is a sample XML with basic XML structures -->
<root xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="sample.xsd"
  version="1.0"
  enabled="true">

  <!-- An element -->
  <simpleElement>text</simpleElement>

  <!-- Nested elements -->
  <parent>
    <child>
      <grandchild attribute="value">text</grandchild>
    </child>
  </parent>

  <!-- Attributes -->
  <elementWithAttributes id="123" type="example" flag="true" />

  <!-- An element with namespaces -->
  <ns:element xmlns:ns="http://example.com/ns">namespace element</ns:element>

  <!-- CDATA -->
  <script><![CDATA[ function test() { alert("JavaScript"); }]]></script>

  <!-- Mixed content -->
  <mixed>This element contains <b>bold text</b> in it.</mixed>

  <!-- Empty element -->
  <emptyElement />

  <!-- Repeated element -->
  <items>
    <item id="1">This is item3.</item>
    <item id="2">This is item2.</item>
    <item id="3">This is item3.</item>
  </items>

  <!-- PI: Processing Instruction -->
  <?processing instruction?>

</root>